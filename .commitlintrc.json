{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["ci", "chore", "docs", "feat", "fix", "perf", "refactor", "revert", "style"]
    ],
    "subject-case": [2, "always", "sentence-case"],
    "references-empty": [2, "never"]
  },
  "parserPreset": {
    "parserOpts": {
      "referenceActions": null,
      "issuePrefixes": ["CCL-", "ALEF-"]
    }
  }
}
